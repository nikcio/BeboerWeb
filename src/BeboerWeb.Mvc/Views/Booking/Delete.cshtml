<h1>Slet</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RowVersion" />
            <div class="form-group">
                <label asp-for="StartTime" class="control-label">Start tid</label>
                <input asp-for="StartTime" class="form-control" disabled/>
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label">Slut tid</label>
                <input asp-for="EndTime" class="form-control" disabled/>
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingItemId" class="control-label">Booking element</label>
                <select asp-for="BookingItemId" class="form-control" disabled>
                    <option value="bookingItem.Id">bookingItem.Title</option>
                </select>
                <span asp-validation-for="BookingItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Slet" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tilbage til listen</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}