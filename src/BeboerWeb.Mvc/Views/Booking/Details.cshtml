@model BookingDto

@{
    ViewData["Title"] = "Detaljer";
    BookingItemDto bookingItem = ViewBag.BookingItem;

}

<h1>Detaljer</h1>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Start tid
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt class = "col-sm-2">
            Slut tid
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndTime)
        </dd>
        <dt class = "col-sm-2">
            Booking element
        </dt>
        <dd class = "col-sm-10">
            @bookingItem?.Title
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Rediger</a> |
    <a asp-action="Index">Tilbage til listen</a>
</div>