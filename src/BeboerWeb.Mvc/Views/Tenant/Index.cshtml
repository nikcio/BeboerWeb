@model IEnumerable<TenantDto>

@{
    ViewData["Title"] = "Tenant";
}

<h1>Beboere</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                Navn
            </th>
            <th>
                Telefon
            </th>
            <th>
                Saldo
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
          
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Opdater</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Vis</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Slet</a>
            </td>
        </tr>
}
    </tbody>
</table>